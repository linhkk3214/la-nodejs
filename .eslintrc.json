{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "google"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "require-jsdoc": "off",
        "linebreak-style": [
            "error",
            "windows"
        ],
        "indent": "off",
        "max-len": "off",
        "arrow-parens": "off",
        "operator-linebreak": [
            "error",
            "before"
        ],
        "padded-blocks": "off",
        "camelcase": "off",
        "object-curly-spacing": "off",
        "comma-dangle": "off",
        "new-cap": "off",
        "brace-style": [
            "error",
            "stroustrup"
        ],
        "one-var": "off",
        "curly": [
            "error",
            "multi-line"
        ],
        "guard-for-in": "off",
        "no-invalid-this": "off"
    }
}